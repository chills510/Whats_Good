<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dtruong510.whatsgood.newsfeed"
    tools:showIn="@layout/activity_newsfeed">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsfeed"
        android:layout_below="@+id/search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_marginTop="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:queryHint="Search.."/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Logo"
        android:src="@mipmap/logo"
        android:layout_toLeftOf="@+id/ServiceBtn"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ServiceBtn"
        android:src="@mipmap/service_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/SalesBtn"
        android:src="@mipmap/sales_icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ServiceBtn"
        android:layout_toEndOf="@+id/ServiceBtn"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProfileBtn"
        android:layout_alignTop="@+id/SalesBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:clickable="true"
        android:text="Profile" />


</RelativeLayout>
