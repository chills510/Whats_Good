<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dtruong510.whatsgood.serviceInfo"
    tools:showIn="@layout/activity_service_info">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:textSize="25dp"
        android:id="@+id/serviceNameTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="17dp"
        android:id="@+id/priceTV"
        android:layout_below="@+id/serviceNameTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/descriptionTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality Rating"
        android:id="@+id/qualityRateTV"
        android:layout_toRightOf="@+id/priceTV"
        android:layout_toEndOf="@+id/priceTV"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Rating"
        android:id="@+id/priceRateTV"
        android:layout_alignTop="@+id/qualityRateTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/descriptionTV"
        android:layout_marginRight="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="%"
        android:id="@+id/qualityPercent"
        android:layout_below="@+id/qualityRateTV"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="%"
        android:id="@+id/pricePercent"
        android:layout_below="@+id/priceRateTV"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Interested"
        android:id="@+id/interestBtn"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="45dp"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="190dp"/>

</RelativeLayout>
